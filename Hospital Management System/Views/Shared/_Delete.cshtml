@model HospitalManagementLibrary.Patient
<div class="modal fade" id="deleteConfirm" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document" id="deleteform">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold" id="ModalTitle">Delete Patient Record</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3" id="deletebody">
                <form>
                    <fieldset>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id, new { @id = "id" })
                                
                            <h5>Are you sure you want to delete <text id="patientName"></text>'s record?</h5>
                                

                            </div>
                        }
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-danger" onclick="confirmDelete($('#id').val())">Confirm</button>
                            <a class="btn btn-primary" data-dismiss="modal">Cancel</a>

                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
